@model WebStore.Domain.Models.Account.RegisterUserViewModel

@{
    ViewData[ "Title" ] = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="signup-form">
                <!--sign up form-->
                <h2> Регистрация пользователя </h2>
                <form asp-action="Register" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="UserName" placeholder="@nameof( Model.UserName )" />
                    <input asp-for="Password" placeholder="@nameof( Model.Password )" />
                    <input asp-for="ConfirmPassword" placeholder="@nameof( Model.ConfirmPassword )" />
                    <input asp-for="Email" placeholder="@nameof(Model.Email)" />
                    <input asp-for="ConfirmEmail" placeholder="@nameof(Model.ConfirmEmail)" />
                    <button type="submit" class="btn btn-default"> Зарегистрироваться </button>
                </form>
            </div> <!--/sign up form-->
        </div>
    </div>
</section>