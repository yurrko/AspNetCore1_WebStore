@model WebStore.Domain.ViewModel.Product.CatalogViewModel
@{
    ViewData[ "Title" ] = "Shop";
    Layout = "_LayoutBreadcrumbs";
}

@section top {
    <section id="topBannerA">
        <div class="container">
            <img src="~/template/images/shop/banner.jpg" alt="" />
        </div>
    </section>
}

<section>
    <div class="row">
        <div class="col-sm-9 padding-right">
            @await Html.PartialAsync( "Partial/_ProductItems", Model.Products )
            <paging page-model="Model.PageViewModel" page-action="Shop" page-url-sectionId="@Model.SectionId" page-url-brandId="@Model.BrandId"></paging>
        </div>
    </div>
</section>